{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "module": "ES2022",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
